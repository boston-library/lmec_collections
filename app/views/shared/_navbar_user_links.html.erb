<% if current_user %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <!-- TODO: Add a fontello user icon -->
      <% if current_user.first_name.blank? %>
        <%= "My Account" %>
      <% else %>
        <%= current_user.first_name %>
      <% end %>
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to t('navbar.galleries'), main_app.galleries_path %></li>
      <li><%= link_to t('blacklight.header_links.search_history'), blacklight.search_history_path %></li>
      <li><%= link_to t('devise.registrations.edit'), main_app.edit_user_registration_path %></li>
      <% if current_user.staff %>
        <li role="separator" class="divider"></li>
        <li><%= link_to_warper '/admin' do %>Map Warper Admin<% end %></li>
        <li role="separator" class="divider"></li>
      <% end %>
      <li><%= link_to t('blacklight.header_links.logout'), main_app.destroy_user_session_path %></li>
    </ul>
  </li>
<% else %>
  <% if has_user_authentication_provider? %>
    <li><%= link_to t('blacklight.header_links.login'), main_app.new_user_session_path %></li>
  <% end %>
<% end %>
