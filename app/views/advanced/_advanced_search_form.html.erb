<%= form_tag search_catalog_path, :id => 'advanced_search_form', :class => 'advanced form-horizontal', :method => :get do  %>
  <%# search_as_hidden_fields(:params => advanced_search_context,
                                :op => 'AND' ) %>
  <div class="row">

    <div class="col-md-8">

      <div id="advanced_search_fields" class="input_columns panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">Enter search terms in the fields below.</h2>
        </div>
        <div class="panel-body">
          <%= render 'advanced/advanced_search_fields' %>
        </div>
        <div class="panel-footer">
          <%= submit_tag t('blacklight_advanced_search.form.search_btn'), :class=>'btn btn-primary advanced_submit', :id=>'advanced_search' %>
          <%= link_to 'Start over', blacklight_advanced_search_engine.advanced_search_path, :class => 'reset btn btn-default' %>
        </div>
      </div>

      <div id="advanced_search_limits" class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title"><%= t('blacklight.advanced_search.limit') %></h2>
        </div>
        <div class="panel-body">
          <%= render 'advanced/advanced_search_date' %>

          <%= render 'advanced/advanced_search_facets' %>
          
        </div>
        <div class="panel-footer">
          <%# label_tag(:sort, "Sort results by") %>
          <%# select_tag(:sort, options_for_select(sort_fields, h(params[:sort]))) %>
          <%= hidden_field_tag(:search_field, blacklight_config.advanced_search[:url_key]) %>
          <%= submit_tag 'Search', :class=>'btn btn-primary advanced_submit' %>
          <%= link_to 'Start over', blacklight_advanced_search_engine.advanced_search_path, :class => 'reset btn btn-default' %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <%= render 'advanced/advanced_search_help' %>
    </div>

    <% unless (search_context_str = render_search_to_s( advanced_search_context)).blank? %>
        <div class="constraints">
          <h4>Within search:</h4>
          <%= search_context_str %>
        </div>
    <% end %>
  </div>


<% end %>