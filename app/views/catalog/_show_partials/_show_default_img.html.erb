<%# Based on
    https://github.com/boston-library/commonwealth-vlr-engine/blob/7cb34d91ad236877b5c2f721960d45b39b39a756/app/views/catalog/_show_partials/_show_default_img.html.erb
   %>

<% object_title = document[blacklight_config.index.title_field.to_sym] %>
<%# img_element = iiif_image_tag(image_pid,
                                {:size => ',800',
                                 :alt => object_title,
                                 :class => 'img_show'}) %>
<%# we are using access800 derivative as default catalog#show image for the moment %>
<% img_element = image_tag(filestream_disseminator_url(image_key, 'image_access_800'),
                           :alt => object_title,
                           :class => 'img_show') %>

<% if document.georeferenced? %>
<nav class="">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <ul class="nav nav-pills">
          <li role="presentation" class="active"><a id="tab-image" href="#image" data-toggle="tab" rel="nofollow">Image</a></li>
          <li role="presentation"><a id="tab-map-overlay" href="#map-overlay" data-toggle="tab" rel="nofollow">Map Overlay</a></li>
        </ul>
      </div>
    </div>
  </div>
</nav>

<div class="tab-content clearfix">
  <div class="tab-pane" id="map-overlay">
    <div id="overlay_map_container">
      <%= warped_map_div('overlay-map', params[:id]) %>
      <div id="opacity_container">
        <label>Opacity:</label>
        <input type="text" value="100" id="overlay-map-opacity" data-slider-min="5" data-slider-max="100" data-slider-step="1" data-slider-value="100">
      </div>
    </div>
  </div>
  <div class="tab-pane active" id="image">
<% end %>

<div id="img_show_container">
  <div id="img_show_canvas">
    <%= link_to '#',
                id: 'img_show_zoom_cue',
                :title => t('blacklight.images.zoom'),
                :rel => 'nofollow' do %>
        <% content_tag :i, '', class: 'img_zoom_icon fa fa-search-plus' %>
    <% end %>
    <%= link_to(img_element, '#', :id => 'img_viewer_link',
                :class => 'img_viewer_link',
                :title => t('blacklight.images.zoom'),
                :rel => 'nofollow') %>
  </div>

  <%= render :partial => 'catalog/_show_partials/show_default_simple_img_viewer',
             :locals => {:object_title => object_title.html_safe,
                         :image_key => image_key} %>

  <% unless page_sequence[:total] == 1 %>
      <%= render :partial => 'catalog/_show_partials/show_prev_next_carousel_links',
                 :locals => {:page_sequence => page_sequence} %>
  <% end %>
</div>

<% if document.georeferenced? %>
  </div> <!-- closing tab pane -->
</div> <!-- closing tab content -->
<% end %>
