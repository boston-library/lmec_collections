<%# header bar for doc items in index view -%>
<div class="documentHeader row">


  <h5 class="index_title document-title-heading col-md-12">
    <% if counter = document_counter_with_offset(document_counter) %>
      <span class="document-counter">
        <%= t('blacklight.search.documents.counter', counter: counter) %>
      </span>
    <% end %>
    <%= link_to_document document,
                         truncate((remove_cod_text(render_title(document)) || document[:id]),
                                  separator: ' ',
                                  length: index_title_length) + index_relation_base_icon(document),
                         counter: counter %>
  </h5>
  <% unless current_page?(collections_path) %>
    <%= galleries_toggle(@galleries, 'repo_object',  document[:id], show_tooltip: true) %>
  <% end %>
</div>
