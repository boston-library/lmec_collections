<div class="modal fade" id="set-galleries-modal" tabindex="-1" role="dialog" aria-labelledby="set-galleries-modal-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"
                id="set-galleries-modal-label">Add to Favorites List</h4>
            </div>
            <div class="modal-body">
                <ul class="list-unstyled button-list">
                <% @galleries. each do |gallery| %>
                    <li>
                        <%= gallery_toggle(gallery, @type, @item_id, text: gallery.name, icon_type: 'plus') %>
                    </li>
                <% end %>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
