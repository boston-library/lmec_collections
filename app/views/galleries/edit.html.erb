<section>
  <div class="container">
    <div class="dashboard-meta">
      <div class="row">
        <div class="col-md-6">
          <h1 class="h3">Editing Favorites List: <%= @gallery.name %></h1>
        </div>
        <div class="col-md-6 text-right">
          <%= link_to 'Back to Favorites Lists', galleries_path, class: 'btn btn-default btn-sm' %>
          <%= link_to 'Show', @gallery, class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-body">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</section>

